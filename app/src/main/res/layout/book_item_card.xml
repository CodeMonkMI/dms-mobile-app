<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title, Author, Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Multimedia &amp; Animation"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bookCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Code: 28575"
                    android:textColor="#607D8B"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/bookCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/status_background"
                android:padding="4dp"
                android:text="3 Credit"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Theory Assessment -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Theory Assessment:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bookTC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - Continuous: 40" />

                <TextView
                    android:id="@+id/bookTF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - Final: 60" />

                <TextView
                    android:id="@+id/bookTT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - Total: 100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Theory Assessment -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Practical Assessment:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bookPC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - Continuous: 25" />

                <TextView
                    android:id="@+id/bookPF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - Final: 25" />

                <TextView
                    android:id="@+id/bookPT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - Total: 50" />
            </LinearLayout>
            <!-- Practical Assessment -->
        </LinearLayout>
        <!-- Grand Total -->
        <TextView
            android:id="@+id/bookGrandTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Grand Total: 150"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
