<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:layout_margin="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/department_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: Computer Science Building,\nUniversity Campus"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Phone: +1-555-0100"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: info@cs.edu"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/hours_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Office Hours: Mondayâ€“Friday, 8:00 AM - 5:00 PM"
            android:textSize="14sp"
            android:textColor="#444444" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
